# Database
DATABASE_URL=postgresql://user:password@localhost:5432/arenaone
SHADOW_DATABASE_URL=postgresql://user:password@localhost:5432/arenaone_shadow

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Email Service (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_your_api_key_here

# Email Configuration (Optional)
# Default: ArenaOne <noreply@arenaone.com>
EMAIL_FROM="ArenaOne <noreply@yourdomain.com>"

# Application URL (used for generating invite links)
# Should match NEXTAUTH_URL in development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase (if used)
# NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
# NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
